<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-12 main">
      <h1>Movies</h1>

      <% Movie.limit(20).each_slice(6) do |slice| %>
      <div class="row">
        <% slice.each do |movie| %>
        <div class="col-xs-6 col-sm-2 box">
          <%= link_to movie_path(movie) do %>
          <img src="<%= movie.poster_image %>" class="img-fluid">
          <div class="info-box">
            <div class="title"><%= movie.title %></div>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
